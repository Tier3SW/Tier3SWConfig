echo -e "
\033[1m\033[4m16 Feb 2018\033[0m 
  Note that if you use asetup for a slc6 release, you now need to specify it.
  eg: instead of asetup AtlasProd1,20.7.5.1.1,here
              do asetup AtlasProd1,20.7.5.1.1,here,slc6
"
fi


if [[ "$ALRB_OSTYPE" = "Linux" ]] && [[ "$ALRB_OSMAJORVER" = "6" ]] && [[ "$ALRB_SHELL" = "tcsh" ]]; then
    which rpm >/dev/null 2>&1
    if [ $? -eq 0 ]; then
	rpm -qa | \grep -e tcsh-6.17-35 >/dev/null 2>&1
	if [ $? -eq 0 ]; then
	    \echo -e "
\033[1m\033[4m17 Feb 2017\033[0m 
  Your version of tcsh has a bug that is not fixed and will cause problems here.
    https://bugzilla.redhat.com/show_bug.cgi?id=1334751
    Please use bash instead.
"
	fi
    fi
fi

