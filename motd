if [ "$ALRB_OSTYPE" = "MacOSX" ]; then
    alrb_result=`xcodebuild -version 2>&1`
    if [ $? -eq 0 ]; then
	alrb_xcodeVer=`\echo $alrb_result | \grep -i Xcode | \cut -f 2 -d " "`
	let alrb_xcodeVerN=`$ATLAS_LOCAL_ROOT_BASE/utilities/convertToDecimal.sh $alrb_xcodeVer 2`
	if [ $alrb_xcodeVerN -lt 603 ]; then
	    alrb_msg="6.02.05 and older"
	else
	    alrb_msg="6.02.10 and newer"
	fi
  \echo -e " 
\033[1m\033[4m09 Jun 2015\033[0m 

Your xcode version is $alrb_xcodeVer
  Please use root versions $alrb_msg
"
    fi
fi

